{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "arrow-parens": "off",
    "no-throw-literal": "off",
    "nonblock-statement-body-position": "off",
    "curly": "off"
  }
}
